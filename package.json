{
  "name": "freelance_market",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:server": "concurrently \"pnpm -C packages/database db:generate\" \"pnpm -C packages/database dev\" \"pnpm -C packages/shared-types dev\" \"pnpm -C apps/server dev\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:deploy": "./scripts/docker-deploy.sh",
    "docker:build": "./scripts/docker-build.sh deploy",
    "docker:build:dev": "./scripts/docker-build.sh dev",
    "docker:build:rebuild": "./scripts/docker-build.sh deploy true",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "ts-morph": "^25.0.1",
    "turbo": "^2.5.3"
  }
}
